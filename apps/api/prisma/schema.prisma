generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id              String           @id @default(uuid())
  name            String
  slug            String           @unique
  apiKey          String           @unique @default(uuid())
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  systemPrompt    String?
  chatConfig      Json?
  chatSessions    ChatSession[]
  endUsers        EndUser[]
  knowledgeChunks KnowledgeChunk[]
  User            User[]
  integrations    Integration[]
}

model Integration {
  id          String   @id @default(uuid())
  tenantId    String
  provider    String   // "messenger", "whatsapp"
  pageId      String?  // Facebook Page ID or WhatsApp Phone Number ID
  accessToken String?  // Long-lived Page Access Token
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  
  @@unique([tenantId, provider, pageId])
}

model EndUser {
  id           String        @id @default(uuid())
  tenantId     String
  externalId   String?
  name         String?
  email        String?
  createdAt    DateTime      @default(now())
  isBlocked    Boolean       @default(false)
  chatSessions ChatSession[]
  tenant       Tenant        @relation(fields: [tenantId], references: [id])
}

model ChatSession {
  id           String        @id @default(uuid())
  tenantId     String
  endUserId    String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  currentMood  String?
  status       String?       @default("active")
  isRestricted Boolean       @default(false)
  unreadCount  Int           @default(0)
  messages     ChatMessage[]
  endUser      EndUser?      @relation(fields: [endUserId], references: [id])
  tenant       Tenant        @relation(fields: [tenantId], references: [id])
}

model ChatMessage {
  id             String      @id @default(uuid())
  sessionId      String
  role           String
  content        String
  createdAt      DateTime    @default(now())
  sentimentLabel String?
  sentimentScore Int?        @default(0)
  session        ChatSession @relation(fields: [sessionId], references: [id])
}

model KnowledgeChunk {
  id         String   @id @default(uuid())
  tenantId   String
  content    String
  source     String?
  vectorId   String
  createdAt  DateTime @default(now())
  metadata   Json?
  sourceType String   @default("text")
  tenant     Tenant   @relation(fields: [tenantId], references: [id])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Tenant    Tenant   @relation(fields: [tenantId], references: [id])
}
