generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id              String           @id @default(uuid())
  name            String
  slug            String           @unique
  apiKey          String           @unique @default(uuid())
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  systemPrompt    String?
  chatConfig      Json?
  widgetConfig    Json?
  chatSessions    ChatSession[]
  endUsers        EndUser[]
  knowledgeChunks KnowledgeChunk[]
  User            User[]
  integrations    Integration[]
  leads           Lead[]
  cannedResponses CannedResponse[]
}

model Integration {
  id          String   @id @default(uuid())
  tenantId    String
  provider    String   // "messenger", "whatsapp"
  pageId      String?  // Facebook Page ID or WhatsApp Phone Number ID
  accessToken String?  // Long-lived Page Access Token
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  
  @@unique([tenantId, provider, pageId])
}

model EndUser {
  id           String        @id @default(uuid())
  tenantId     String
  externalId   String?
  name         String?
  email        String?
  profilePic   String?
  createdAt    DateTime      @default(now())
  isBlocked    Boolean       @default(false)
  chatSessions ChatSession[]
  tenant       Tenant        @relation(fields: [tenantId], references: [id])
}

model ChatSession {
  id           String        @id @default(uuid())
  tenantId     String
  endUserId    String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  currentMood  String?
  status       String?       @default("active")
  isRestricted Boolean       @default(false)
  unreadCount  Int           @default(0)
  messages     ChatMessage[]
  endUser      EndUser?      @relation(fields: [endUserId], references: [id])
  tenant       Tenant        @relation(fields: [tenantId], references: [id])
  leads        Lead[]
  agentNotes   AgentNote[]
}

model ChatMessage {
  id             String      @id @default(uuid())
  sessionId      String
  role           String
  content        String
  createdAt      DateTime    @default(now())
  sentimentLabel String?
  sentimentScore Int?        @default(0)
  tokensUsed     Int?        @default(0)  // Tracks AI Model token usage per message
  session        ChatSession @relation(fields: [sessionId], references: [id])
}

model KnowledgeChunk {
  id         String   @id @default(uuid())
  tenantId   String
  content    String
  source     String?
  vectorId   String
  createdAt  DateTime @default(now())
  metadata   Json?
  sourceType String   @default("text")
  byteSize   Int?     @default(0)     // Tracks storage capacity (bytes) of this chunk
  tenant     Tenant   @relation(fields: [tenantId], references: [id])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

model Lead {
  id             String      @id @default(uuid())
  tenantId       String
  sessionId      String?     
  name           String?
  email          String?
  phone          String?
  company        String?
  customData     Json?
  source         String      @default("widget")
  createdAt      DateTime    @default(now())
  
  tenant         Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  session        ChatSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([email])
}

model CannedResponse {
  id        String   @id @default(uuid())
  tenantId  String
  shortcut  String   // e.g. "greeting", "thanks"
  title     String   // e.g. "Greeting Message"
  content   String   // The full response text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, shortcut])
  @@index([tenantId])
}

model AgentNote {
  id        String      @id @default(uuid())
  sessionId String
  agentName String?
  content   String
  createdAt DateTime    @default(now())

  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}
