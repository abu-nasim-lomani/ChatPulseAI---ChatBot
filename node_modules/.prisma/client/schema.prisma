generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique // e.g., 'acme-shop'
  apiKey    String   @unique @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  endUsers        EndUser[]
  chatSessions    ChatSession[]
  knowledgeChunks KnowledgeChunk[]

  // AI Configuration
  systemPrompt String? @db.Text // Custom instructions for the AI
}

model EndUser {
  id         String   @id @default(uuid())
  tenantId   String
  tenant     Tenant   @relation(fields: [tenantId], references: [id])
  externalId String? // e.g., CRM ID or email
  name       String?
  email      String?
  createdAt  DateTime @default(now())

  chatSessions ChatSession[]
}

model ChatSession {
  id        String   @id @default(uuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  endUserId String?
  endUser   EndUser? @relation(fields: [endUserId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  currentMood String? // e.g., 'neutral', 'angry', 'happy'
  status      String? @default("active") // 'active', 'agent_requested', 'closed', 'agent_connected'

  messages ChatMessage[]
}

model ChatMessage {
  id        String      @id @default(uuid())
  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id])
  role      String // 'user', 'assistant', 'system'
  content   String

  sentimentScore Int?    @default(0)
  sentimentLabel String? // 'positive', 'negative', 'neutral'

  createdAt DateTime @default(now())
}

model KnowledgeChunk {
  id        String   @id @default(uuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  content   String   @db.Text
  source    String? // e.g., "Website - Home Page" or "Pricing PDF"
  vectorId  String // ID in Pinecone (optional, if we want to cross-reference)
  createdAt DateTime @default(now())
}
